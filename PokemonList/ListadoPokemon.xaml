<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokemonList.ListadoPokemon"
             Title="ListadoPokemon">
    <ScrollView>

        <VerticalStackLayout>
            <ListView x:Name="pokeInfoss" ItemsSource="{Binding pokeInfos}" ItemSelected="ShowPokeResume">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="1" />
                                </Grid.RowDefinitions>


                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="1"
                               Text="{Binding name}"
                               FontAttributes="Bold" />

                                <Label Grid.Row="1"
                               Grid.Column="1"
                               Text="{Binding url}"
                               FontAttributes="Italic"
                               VerticalOptions="End" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>